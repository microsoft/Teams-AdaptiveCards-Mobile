{
    "type": "AdaptiveCard",
    "$schema": "https://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5",
    "body": [
        {
            "type": "TextBlock",
            "text": "Below is a Carousel with 6 pages",
            "wrap": true,
            "size": "Large"
        },
        {
            "type": "Carousel",
            "pageAnimation": "Slide",
            "pages": [
                {
                    "type": "CompoundButton",
                    "style": "emphasis",
                    "showBorder": true,
                    "roundedCorners": true,
                    "verticalContentAlignment":"Bottom",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "PAGE 1 of 6",
                            "wrap": true,
                            "size": "Large"
                        },
                        {
                            "type": "TextBlock",
                            "text": "First TextBlock",
                            "wrap": true
                        },
                        {
                            "type": "TextBlock",
                            "text": "Second TextBlock with separator",
                            "wrap": true,
                            "separator": true,
                            "spacing": "Medium"
                        }
                    ]
                },
                {
                    "type": "CarouselPage",
                    "style": "accent",
                    "showBorder": true,
                    "roundedCorners": true,
                    "verticalContentAlignment":"Bottom",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "PAGE 2 of 6",
                            "wrap": true,
                            "size": "Large"
                        },
                        {
                            "type": "TextBlock",
                            "text": "First TextBlock",
                            "wrap": true
                        },
                        {
                            "type": "TextBlock",
                            "text": "Second TextBlock with separator",
                            "wrap": true,
                            "separator": true,
                            "spacing": "Medium"
                        }
                    ]
                },
                {
                    "type": "CarouselPage",
                    "style": "good",
                    "showBorder": true,
                    "roundedCorners": true,
                    "verticalContentAlignment":"Bottom",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "PAGE 3 of 6",
                            "wrap": true,
                            "size": "Large"
                        },
                        {
                            "type": "TextBlock",
                            "text": "First TextBlock",
                            "wrap": true
                        },
                        {
                            "type": "TextBlock",
                            "text": "Second TextBlock with separator",
                            "wrap": true,
                            "separator": true,
                            "spacing": "Medium"
                        }
                    ]
                },
                {
                    "type": "CarouselPage",
                    "style": "warning",
                    "showBorder": true,
                    "roundedCorners": true,
                    "verticalContentAlignment":"Bottom",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "PAGE 4 of 6",
                            "wrap": true,
                            "size": "Large"
                        },
                        {
                            "type": "TextBlock",
                            "text": "First TextBlock",
                            "wrap": true
                        },
                        {
                            "type": "TextBlock",
                            "text": "Second TextBlock with separator",
                            "wrap": true,
                            "separator": true,
                            "spacing": "Medium"
                        },
                        {
                            "type": "TextBlock",
                            "size": "Large",
                            "text": "Rating input"
                        },
                        {
                            "type": "Input.Rating",
                            "id": "rating1",
                            "label": "Pick a rating",
                            "size": "medium",
                            "isRequired": true,
                            "errorMessage": "Please pick a rating"
                        },
                        {
                            "type": "Input.Rating",
                            "id": "rating2",
                            "label": "Pick a rating",
                            "allowHalfSteps": true,
                            "size": "large",
                            "isRequired": true,
                            "errorMessage": "Please pick a rating",
                            "color": "marigold",
                            "value": 3
                        }
                    ]
                },
                {
                    "type": "CarouselPage",
                    "style": "attention",
                    "showBorder": true,
                    "roundedCorners": true,
                    "verticalContentAlignment":"Bottom",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "PAGE 5 of 6",
                            "wrap": true,
                            "size": "Large"
                        },
                        {
                            "type": "TextBlock",
                            "text": "First TextBlock",
                            "wrap": true
                        },
                        {
                            "type": "TextBlock",
                            "text": "Second TextBlock with separator",
                            "wrap": true,
                            "separator": true,
                            "spacing": "Medium"
                        }
                    ]
                },
                {
                    "type": "CarouselPage",
                    "showBorder": true,
                    "roundedCorners": true,
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "PAGE 6 of 6",
                            "wrap": true,
                            "size": "Large"
                        },
                        {
                            "type": "TextBlock",
                            "text": "First TextBlock",
                            "wrap": true
                        },
                        {
                            "type": "TextBlock",
                            "text": "Second TextBlock with separator",
                            "wrap": true,
                            "separator": true,
                            "spacing": "Medium"
                        }
                    ]
                }
            ]
        },
        {
            "type": "TextBlock",
            "text": "This text is below the Carousel",
            "wrap": true,
            "size": "Large"
        }
    ],
    "actions": [
        {
            "type": "Action.OpenUrl",
            "title": "Click me",
            "url": "https://www.microsoft.com"
        }
    ]
}
