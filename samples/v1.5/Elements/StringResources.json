{
	"type": "AdaptiveCard",
	"$schema": "https://adaptivecards.io/schemas/adaptive-card.json",
	"version": "1.5",
	"body": [
		{
			"type": "Container",
			"items": [
				{
					"type": "TextBlock",
					"text": "${rs:hello} ${rs:john} ${rs:world}",
					"wrap": true
				},
				{
					"type": "TextBlock",
					"text": "${rs:john} ${rs:wick}",
					"wrap": true
				},
				{
					"type": "TextBlock",
					"text": "${rs:catImageURL}",
					"wrap": true
				},
				{
					"type": "TextBlock",
					"text": "${rs:catImageURL",
					"wrap": true
				},
				{
					"type": "TextBlock",
					"text": "${rs:catImageURL}are",
					"wrap": true
				},
				{
					"type": "TextBlock",
					"text": "prefix${rs:catImageURL}",
					"wrap": true
				},
				{
					"type": "TextBlock",
					"text": "{rs:catImageURL}",
					"wrap": true
				},
				{
					"type": "TextBlock",
					"text": "${rscatImageURL}",
					"wrap": true
				},
				{
					"type": "Image",
					"url": "${rs:catImageURL}",
					"size": "Large",
					"themedUrls": [
						{
							"theme": "Light",
							"url": "${rs:lightUrl}"
						},
						{
							"theme": "Dark",
							"url": "${rs:darkUrl}"
						}
					]
				}
			],
			"style": "accent",
			"showBorder": true,
			"roundedCorners": true
		}
	],
	"resources": {
		"strings": {
			"lightUrl": {
				"defaultValue": "https://plus.unsplash.com/premium_photo-1667358091118-29e916ddbcc5?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NXx8aHVza3l8ZW58MHx8MHx8fDA%3D"
			},
			"darkUrl": {
				"defaultValue": "https://images.unsplash.com/photo-1541451563641-c2bdc370f58a?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8OHx8aHVza3l8ZW58MHx8MHx8fDA%3D"
			},
			"info": {
				"defaultValue": "This feature helps reduce card payload size.",
				"localizedValues": {
					"en-US": "This feature helps reduce card payload size.",
					"fr-FR": "Cette fonctionnalité aide à réduire la taille de la charge utile de la carte.",
					"sp-SP": "Esta función ayuda a reducir el tamaño de la carga útil de la tarjeta."
				}
			},
			"catImageURL": {
				"defaultValue": "https://adaptivecards.io/content/cats/1.png"
			},
			"hello": {
				"defaultValue": "Hello",
				"localizedValues": {
					"en-US": "Hello",
					"fr-FR": "Bonjour",
					"sp-SP": "Hola"
				}
			},
			"world": {
				"defaultValue": "World",
				"localizedValues": {
					"en-US": "World",
					"fr-FR": "Monde",
					"sp-SP": "BumBum"
				}
			}
		}
	}
}
