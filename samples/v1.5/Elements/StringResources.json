{
	"type": "AdaptiveCard",
	"$schema": "https://adaptivecards.io/schemas/adaptive-card.json",
	"version": "1.5",
	"body": [
		{
			"type": "TextBlock",
			"text": "Multiple String Resource in One String",
			"wrap": true,
			"weight": "Bolder"
		},
		{
			"type": "Container",
			"items": [
				{
					"type": "TextBlock",
					"text": "${rs:hello} ${rs:world}",
					"wrap": true
				}
			],
			"style": "accent",
			"showBorder": true,
			"roundedCorners": true
		},
		{
			"type": "TextBlock",
			"text": "Resource key doesn't exists",
			"wrap": true,
			"weight": "Bolder"
		},
		{
			"type": "Container",
			"items": [
				{
					"type": "TextBlock",
					"text": "${rs:noKey} ${rs:world}",
					"wrap": true
				}
			],
			"style": "warning",
			"showBorder": true,
			"roundedCorners": true
		},
		{
			"type": "TextBlock",
			"text": "No default value for resource key",
			"wrap": true,
			"weight": "Bolder"
		},
		{
			"type": "Container",
			"items": [
				{
					"type": "TextBlock",
					"text": "${rs:hello} ${rs:noDefaultValue}",
					"wrap": true
				}
			],
			"style": "attention",
			"showBorder": true,
			"roundedCorners": true
		},
		{
			"type": "TextBlock",
			"text": "On Regular Text Elements",
			"wrap": true,
			"weight": "Bolder"
		},
		{
			"type": "Container",
			"items": [
				{
					"type": "TextBlock",
					"text": "${rs:info1}",
					"wrap": true
				},
				{
					"type": "RichTextBlock",
					"inlines": [
						{
							"type": "TextRun",
							"text": "${rs:info1}",
							"color": "Good"
						},
						{
							"type": "TextRun",
							"text": "${rs:info1}",
							"isSubtle": true
						},
						{
							"type": "TextRun",
							"text": "${rs:info1}",
							"size": "Small"
						},
						{
							"type": "TextRun",
							"text": "${rs:info1}",
							"size": "Medium"
						},
						{
							"type": "TextRun",
							"text": "${rs:info1}",
							"size": "Large"
						},
						{
							"type": "TextRun",
							"text": "${rs:info1}",
							"size": "ExtraLarge"
						},
						{
							"type": "TextRun",
							"text": "${rs:info1}",
							"weight": "Lighter"
						},
						{
							"type": "TextRun",
							"text": "${rs:info1}",
							"weight": "Bolder"
						}
					]
				}
			],
			"style": "accent",
			"showBorder": true,
			"roundedCorners": true
		},
		{
			"type": "TextBlock",
			"text": "On URLs",
			"wrap": true,
			"weight": "Bolder"
		},
		{
			"type": "Container",
			"items": [
				{
					"type": "ImageSet",
					"images": [
						{
							"type": "Image",
							"url": "${rs:catImageURL}",
							"altText": "Cat"
						},
						{
							"type": "Image",
							"url": "${rs:catImageURL}",
							"altText": "Cat"
						},
						{
							"type": "Image",
							"url": "${rs:catImageURL}",
							"altText": "Cat"
						},
						{
							"type": "Image",
							"url": "${rs:catImageURL}",
							"altText": "Cat"
						},
						{
							"type": "Image",
							"url": "${rs:catImageURL}",
							"altText": "Cat"
						},
						{
							"type": "Image",
							"url": "${rs:catImageURL}",
							"altText": "Cat"
						}
					]
				}
			],
			"style": "accent",
			"showBorder": true,
			"roundedCorners": true
		},
		{
			"type": "TextBlock",
			"wrap": true,
			"text": "${rs:info2}"
		},
		{
			"type": "ActionSet",
			"actions": [
				{
					"type": "Action.ShowCard",
					"title": "ShowCard",
					"card": {
						"$schema": "https://adaptivecards.io/schemas/adaptive-card.json",
						"type": "AdaptiveCard",
						"version": "1.5",
						"body": [
							{
								"type": "TextBlock",
								"text": "${rs:info2}",
								"wrap": true
							}
						]
					}
				}
			]
		},
		{
			"type": "TextBlock",
			"text": "Resource strings can be clubbed with theme based images",
			"wrap": true,
			"size": "Large"
		},
		{
			"type": "Image",
			"url": "https://yt3.ggpht.com/a/AATXAJzXc6NxfXzlwiAwWQx_7JNZA3I35bovXHiQbQ=s900-c-k-c0xffffffff-no-rj-mo",
			"size": "Large",
			"themedUrls": [
				{
					"theme": "Light",
					"url": "https://${rs:Lighttheme}/premium_photo-1667358091118-29e916ddbcc5?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NXx8aHVza3l8ZW58MHx8MHx8fDA%3D"
				},
				{
					"theme": "Dark",
					"url": "https://images.unsplash.com/photo-1541451563641-c2bdc370f58a?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8OHx8aHVza3l8ZW58MHx8MHx8fDA%3D"
				}
			]
		}
	],
	"resources": {
		"strings": {
			"info1": {
				"defaultValue": "This feature helps reduce card payload size.",
				"localizedValues": {
					"en-US": "This feature helps reduce card payload size.",
					"fr-FR": "Cette fonctionnalité aide à réduire la taille de la charge utile de la carte.",
					"sp-SP": "Esta función ayuda a reducir el tamaño de la carga útil de la tarjeta."
				}
			},
			"catImageURL": {
				"defaultValue": "https://adaptivecards.io/content/cats/1.png"
			},
			"hello": {
				"defaultValue": "Hello",
				"localizedValues": {
					"en-US": "Hello",
					"fr-FR": "Bonjour",
					"sp-SP": "Hola"
				}
			},
			"world": {
				"defaultValue": "World",
				"localizedValues": {
					"en-US": "World",
					"fr-FR": "Monde",
					"sp-SP": "Mundo"
				}
			},
			"info2": {
				"defaultValue": "String resources also work in inline cards",
				"localizedValues": {
					"en-US": "String resources also work in inline cards",
					"fr-FR": "Les ressources de chaînes fonctionnent également dans les cartes intégrées",
					"sp-SP": "Los recursos de cadena también funcionan en tarjetas en línea"
				}
			},
			"Lighttheme": {
				"defaultValue": "plus.unsplash.com"
			},
			"noDefaultValue":{
				"localizedValues": {
					"en-US": "World",
					"fr-FR": "Monde",
					"sp-SP": "Mundo"
				}
			}
		}
	}
}
