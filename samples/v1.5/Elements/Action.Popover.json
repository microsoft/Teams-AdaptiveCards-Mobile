{
	"type": "AdaptiveCard",
	"$schema": "https://adaptivecards.io/schemas/adaptive-card.json",
	"version": "1.5",
	"body": [
		{
			"type": "TextBlock",
			"weight": "bolder",
			"size": "large",
			"text": "Click below to open a Popover"
		},
		{
			"type": "Input.Text",
			"id": "inputOutsidePopover",
			"label": "Input outside Popover"
		},
		{
			"type": "ActionSet",
			"actions": [
				{
					"type": "Action.Popover",
					"title": "Add Name",
					"content": {
						"type": "Container",
						"items": [
							{
								"type": "Input.Text",
								"id": "inputInPopover1",
								"label": "Please enter your name"
							},
							{
								"type": "ActionSet",
								"actions": [
									{
										"type": "Action.Submit",
										"title": "Submit",
										"tooltip": "Click me",
										"mode": "secondary"
									}
								]
							}
						]
					}
				}
			]
		},
		{
			"type": "ActionSet",
			"actions": [
				{
					"type": "Action.Popover",
					"title": "Add Number",
					"content": {
						"type": "Container",
						"items": [
							{
								"type": "Input.Text",
								"id": "inputInPopover2",
								"label": "Please enter your phone"
							},
							{
								"type": "ActionSet",
								"actions": [
									{
										"type": "Action.Submit",
										"title": "Submit",
										"tooltip": "Click me",
										"mode": "secondary"
									}
								]
							}
						]
					}
				}
			]
		},
		{
			"type": "ActionSet",
			"actions": [
				{
					"type": "Action.Submit",
					"title": "Submit"
				}
			]
		},
		{
			"type": "ActionSet",
			"actions": [
				{
					"type": "Action.Execute",
					"title": "Execute"
				}
			]
		}
	],
	"actions": [
		{
			"type": "Action.Popover",
			"title": "Add email",
			"content": {
				"type": "Container",
				"items": [
					{
						"type": "Input.Text",
						"id": "inputInPopover3",
						"label": "Please enter your email"
					},
					{
						"type": "ActionSet",
						"actions": [
							{
								"type": "Action.Submit",
								"title": "Submit",
								"tooltip": "Click me"
							},
							{
								"type": "Action.Popover",
								"title": "Popover nested",
								"content": {
									"type": "Container",
									"items": [
										{
											"type": "Input.Text",
											"id": "inputInPopover4",
											"label": "Please enter your email"
										},
										{
											"type": "ActionSet",
											"actions": [
												{
													"type": "Action.Submit",
													"title": "Submit",
													"tooltip": "Click me"
												}
											]
										}
									]
								}
							}
						]
					}
				]
			}
		}
	]
}
